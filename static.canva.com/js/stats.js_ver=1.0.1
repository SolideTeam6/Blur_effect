	CanvaStats.newUserTotalString = truncatedNewUserTotal + 'M';

	var newImagesTotal = CanvaStats.imagesTotal;
	var imagesGrowthPerMilli = CanvaStats.imagesGrowthPerWeek / 7 / 24 / 60 / 60 / 1000;
	newImagesTotal += Math.floor((Date.now() - CanvaStats.imagesTotalDate) * imagesGrowthPerMilli);
	CanvaStats.newImagesTotal = newImagesTotal;
